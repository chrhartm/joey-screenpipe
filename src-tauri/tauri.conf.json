{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Joey",
  "version": "0.1.0",
  "identifier": "com.joey.app",
  "build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Joey",
        "width": 800,
        "height": 600,
        "visible": false,
        "decorations": false,
        "resizable": false,
        "skipTaskbar": true,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
		"active": true,
		"targets": ["deb", "appimage", "nsis", "msi", "dmg", "app"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
  }
}
